<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="imy320_android_assignment.personalassistant" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".CalendarView"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="Calendar" >
        </activity>
        <activity
            android:name=".ToDoList"
            android:label="@string/title_activity_to_do_list" >
        </activity>
        <activity
            android:name=".AddEvent"
            android:label="@string/title_activity_add_event" >
        </activity>
        <activity
            android:name=".ShowAllEvents"
            android:label="@string/title_activity_show_all_events" >
        </activity>
        <activity
            android:name=".AddToDo"
            android:label="@string/title_activity_add_to_do" >
        </activity>
        <activity
            android:name=".ShowAllToDos"
            android:label="@string/title_activity_show_all_to_dos" >
        </activity>
        <activity
            android:name=".NewActivity"
            android:label="@string/title_activity_new" >
        </activity>
    </application>

</manifest>
